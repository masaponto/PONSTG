<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="com.masaponto.android.ponstg.TitleActivity"
              android:orientation="vertical"
              android:gravity="center_vertical">

<TextView
    android:text="PON\nSHOOTING"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/title_text"
    android:gravity="center|bottom"
    android:textIsSelectable="false"
    android:textSize="40sp"
    android:layout_weight="1"
    />


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.3"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="HIGHSCORE:"
        android:id="@+id/title_highscore_label"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/title_hightscore"
        android:layout_weight="1.4"
        android:textSize="20sp"
        android:gravity="center|left"
        />
</LinearLayout>

<ImageButton
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/title_start_button"
    android:src="@drawable/start_button_color"
    android:background="@null"
    android:layout_centerVertical="true"
    android:scaleType="fitCenter"
    android:cropToPadding="false"
    android:adjustViewBounds="true"
    android:layout_weight="1.1"/>

<TextView
    android:text="Developed by masaponto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/textView"
    android:layout_weight="1.0"
    android:gravity="bottom"/>

</LinearLayout>
